<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Zip</th>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.fName %></td>
        <td><%= address.lName %></td>
        <td><%= address.email %></td>
        <td><%= address.zip %></td>
        <td><%= address.color %></td>
        <td><%= link_to 'VIEW', address %></td>
        <td><%= link_to 'CHANGE', edit_address_path(address) %></td>
        <td><%= link_to 'DELETE', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
